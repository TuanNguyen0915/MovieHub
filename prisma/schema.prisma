generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  email        String   @unique
  hashPassword String?
  avatar       String?
  movies       Movie[]
  tvShows      TvShow[]
  currentPlan  String   @default("Free")
}

type Movie {
  id       Int
  movieImg String
  name     String
}

type TvShow {
  id        Int
  tvShowImg String
  name      String
}
